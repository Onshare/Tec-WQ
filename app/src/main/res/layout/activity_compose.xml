<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/comp_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38.5dp"
        android:background="#AF000000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <View
            android:id="@+id/actionback"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/app_close" />

        <TextView
            android:id="@+id/actiontitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="合 成"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <View
            android:id="@+id/actionsure"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/app_sure" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/comp_ori"
        android:layout_width="108dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:background="@drawable/comp_bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"/>
</RelativeLayout>